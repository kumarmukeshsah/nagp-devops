pipeline{
    agent any
    environment{
        notifyEmail = "mukesh.sah@nagarro.com"
    }
    tools{
        maven 'MAVEN_HOME'
    }
    triggers{
        cron('0 06 * * *')
    }
    stages{
        stage("code checkout"){
            steps{
                bat "echo new change"
            }
        }
        stage("code build"){
            steps{
                bat "mvn clean"
            }
        }
        stage("code test"){
            steps{
                 bat "mvn test"
            }
        }
    }
    post{
        success{
            bat "echo success"
        }
    }
}
