pipeline{
    agent any
    environment{
        notifyEmail = "mukesh.sah@nagarro.com"
    }
    tools{
        maven 'MAVEN_HOME'
    }
    triggers{
        cron('H 06 * * *')
    }
    stages{
        stage("code checkout"){
            steps{
                bat "echo new change"
            }
        }
        stage("Sonar Trigger"){
            steps{
                bat "mvn sonar:sonar"
            }
        }
        stage("code build"){
            steps{
                bat "mvn clean"
            }
        }
        stage("code test"){
            steps{
                 bat "mvn test"
            }
        }
        stage("Publish to Artifactory"){
            steps{
                rtMavenDeployer(
                    id: 'deployer',
                    serverId: 'nagp_test',
                    releaseRepo: 'sampleNagpRepo',
                    snapshotRepo: 'sampleNagpRepo'
                )
                rtMavenRun(
                    pom: 'pom.xml',
                    goals: 'clean install',
                    deployerId:'deployer'
                )
                rtPublishBuildInfo(
                    serverId: 'nagp_test'
                )
            }
        }
        stage("Invoke Sample Free Style Job"){
            steps{
                build job: 'TestFreeStyle'
            }
        }
    }
    post{
        success{
            bat "echo success"
        }
    }
}
